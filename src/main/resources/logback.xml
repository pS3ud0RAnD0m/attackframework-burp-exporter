<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <property name="APP_PATTERN" value="%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>${APP_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Nested class reference uses the binary name with '$' -->
    <appender name="UI" class="ai.attackframework.tools.burp.utils.Logger$UiAppender"/>

    <!-- Never log HTTP wire/packet content (would blow up with traffic). -->
    <logger name="org.apache.hc" level="WARN"/>
    <logger name="org.opensearch" level="WARN"/>

    <!-- Our package: DEBUG in console/UI. Third-party at INFO+ to avoid flood. -->
    <logger name="ai.attackframework.tools.burp" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="UI"/>
    </root>
</configuration>
